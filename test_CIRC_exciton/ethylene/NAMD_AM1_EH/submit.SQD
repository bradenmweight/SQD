#!/bin/bash
#SBATCH -p debug
#SBATCH -J CIRC_TEST
#SBATCH -o output.slurm
#SBATCH --mem 1GB
#SBATCH -t 1:00:00
#SBATCH -N 1
#SBATCH --ntasks-per-node=1

export SQD_HOME="/scratch/bweight/software/SQD/"
export SQD_SCRATCH="/local_scratch/$SLURM_JOB_ID/" # Location where G16 jobs will be run

echo "Setting paths in slurm:"
echo "  SQD_HOME    = $SQD_HOME"
echo "  SQD_SCRATCH = $SQD_SCRATCH"

module load gaussian
module load intel

export OMP_NUM_THREADS=1
export MKL_NUM_THREADS=1

### THIS SHOULD NOT BE NEEDED ANYMORE GIVEN SQD_SCRATCH ABOVE
# ADD THIS TO ALL GAUSSIAN JOBS
#export GAUSS_SCRDIR=/local_scratch/$SLURM_JOB_ID

python3 $SQD_HOME/src/NAMD/NAMD_main.py > MD.out

